<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal">

    <TextView
        android:text="@string/how_to_win_title"
        style="@style/HowToPlayText.Title"
        />

    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:text="@string/how_to_win_mini_board_info"
        style="@style/HowToPlayText"
        />

    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ImageView
        android:src="@drawable/how_to_win_main_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:text="@string/how_to_win_a_mini_board"
        style="@style/HowToPlayText"
        />

    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ImageView
        android:src="@drawable/how_to_win_final_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:text="@string/how_to_win_mini_board_image_description"
        style="@style/HowToPlayText"
        />

    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        />
</LinearLayout>